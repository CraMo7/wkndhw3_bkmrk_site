<h4>Add a new bkmrk</h4>

<form action="/bkmrks" method="post">
  <label for="title">Title:</label><input type="text" name="title">
  <label for="category">Category:</label>
  <select name="text" name="category">
    <option value="general">General</option>
    <option value="information">Information</option>  
    <option value="news">News</option>  
    <option value="social">Social Media</option>
    <option value="image">Pictures</option>
    <option value="music">Music</option>  
    <option value="video">Video</option>  
  </select>
  <label for="link">Link Address:</label><input type="text" name="link">
  <label for="details">bkmrk Info/Notes:</label><input type="text" name="details" size="60">



  <input type="submit" class="button">
</form>